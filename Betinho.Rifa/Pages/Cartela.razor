@using Betinho.Rifa.Entities;



<RadzenStack>
    @foreach(var row in CartelaTable)
    {
        <RadzenRow>
        @foreach(var col in row.Value)
        {
            <RadzenColumn>@col</RadzenColumn>
        }
        </RadzenRow>
    }
</RadzenStack>

@code {
    [Parameter] public ActionEntity Action { get; set; }
    public QuotasAquiredEntity QuotasAquired { get; set; }
    Dictionary<int, List<int>> CartelaTable { get; set; } = new Dictionary<int, List<int>>();

    protected override void OnInitialized()
    {
        var lastNumber = 0;
        var row = 0;

        while (lastNumber < Action.TotalQuotas)
        {
            List<int> cols = new List<int>();

            for (int col = lastNumber; col < (10 + lastNumber); col++)
                cols.Add(col + 1);

            lastNumber += cols.Count;
            CartelaTable.Add(row, cols);
            row++;
            Console.WriteLine(lastNumber);
        }
    }
}
